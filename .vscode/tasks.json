{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "release",
            "type": "process",
            "command": "pwsh",
            "args": [
                "-NoProfile",
                "-NoLogo",
                "-NonInteractive",
                "-NoProfileLoadTime",
                "-File",
                "${workspaceFolder}/build/build.ps1",
                "-BuildType",
                "Release"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "debug",
            "type": "process",
            "command": "pwsh",
            "args": [
                "-NoProfile",
                "-NoLogo",
                "-NonInteractive",
                "-NoProfileLoadTime",
                "-File",
                "${workspaceFolder}/build/build.ps1",
                "-BuildType",
                "Debug"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}